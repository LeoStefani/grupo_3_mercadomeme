                        <a href=""><i class="far fa-trash-alt"></i></a>
                        <br>
                        <br>
                        <a href=""><i class="far fa-plus-square"></i></a>
                    </div>
                </div>
            </div>

            <button class="btn btn-warning btn-lg btn-block mt-3 shadow rounded-lg ml-3 mr-3" type="submit"
                role="link">CONFIRMAR
                Y EDITAR PRODUCTO</button>
        </div>
    </div>
