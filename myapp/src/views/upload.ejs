<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>
    <div class="upload container">
        <div class="row">

            <div class="firstColumn d-flex flex-wrap flex-column justify-content-start align-items-center col-12 col-md-8">

                <!-- Decision Block -->
                <div class="decisionBlock w-100 d-flex flex-wrap justify-content-between shadow rounded-lg p-2 mb-2">
                    <h5 class="w-100 text-center">Crear nuevo producto</h5>
                    <div class="w-100">
                        <form class="w-100" action="/products/create" method="GET">
                            <button class="w-100 btn btn-md btn-warning" type="submit">Crear producto desde
                                cero</button>
                        </form>
                    </div>
                </div>
                <!-- Decision Block -->

                <!-- filters block -->
                <div class="searchBlock w-100 d-flex flex-wrap justify-content-between shadow rounded-lg p-2 mb-2 mt-4">
                    <h5 class="w-100 text-center">Editar o eliminar producto existente</h5>
                    <form class="w-100 d-flex flex-wrap justify-content-between" action="/products/upload" method="GET">

                        <!-- id filter -->
                        <div class="d-flex flex-wrap justify-content-between align-items-center w-100 mt-2">
                            <input class="check mr-3" type="checkbox" name="idSearch" id="idSearchCheck"
                                value="idSearch">
                            <input class="w-75 mb-1 flex-grow-1 border border-white rounded-lg p-1" type="text"
                                placeholder="Busqueda por ID" name="idOfProduct" id="idSearchInput" disabled>
                            <script>
                                document.getElementById('idSearchCheck').onchange = function () {
                                    document.getElementById('idSearchInput').disabled = !this.checked;
                                };
                            </script>
                        </div>
                        <!-- id filter -->

                        <!-- name filter -->
                        <div class="d-flex flex-wrap justify-content-between align-items-center w-100 mt-2">
                            <input class="check mr-3" type="checkbox" name="nameSearch" id="nameSearchCheck"
                                value="nameSearch">
                            <input class="w-75 mb-1 flex-grow-1 border border-white rounded-lg p-1" type="text" name="nameOfProduct"
                                placeholder="Busqueda por nombre del producto" id="nameSearchInput" disabled>
                            <script>
                                document.getElementById('nameSearchCheck').onchange = function () {
                                document.getElementById('nameSearchInput').disabled = !this.checked;
                                };
                            </script>
                        </div>
                        <!-- name filter -->

                        <!-- type filter -->
                        <div class="d-flex flex-wrap justify-content-between align-items-center w-100 mt-2p">
                            <input class="check m-0 p-0" type="checkbox" name="typeSearch" id="typeSearchCheck"
                                value="typeSearch">
                            <select class="flex-grow-1 mt-1 p-1 border border-white rounded-lg ml-3" name="category"
                                id="typeSearchInput" disabled>
                                <option value="typeOfProduct">Buscar por tipo de producto</option>
                                <% for (let i=0; i< productsCategories.length; i++) { %>

                                <option  value="<%= productsCategories[i] %>"><%= productsCategories[i] %></option>

                                <% } %>

                            </select>
                            <script>
                                document.getElementById('typeSearchCheck').onchange = function () {
                                    document.getElementById('typeSearchInput').disabled = !this.checked;
                                };
                            </script>
                        </div>
                        <!-- type filter -->

                        <!-- price filter -->
                        <!-- <div class="d-flex flex-wrap justify-content-start align-items-center w-100 mt-2">
                            <input class="check mr-3" type="checkbox" name="priceSearch" id="priceSearchCheck"
                                value="priceSearch">
                            <input class="w-25 flex-grow-0.5 border border-white rounded-lg p-1 mr-2" type="text"
                                placeholder="Min" id="priceSearchInputMin" disabled>
                            <input class="w-25 flex-grow-0.5 border border-white rounded-lg p-1" type="text"
                                placeholder="Max" id="priceSearchInputMax" disabled>
                            <script>
                                document.getElementById('priceSearchCheck').onchange = function () {
                                    document.getElementById('priceSearchInputMin').disabled = !this.checked;
                                    document.getElementById('priceSearchInputMax').disabled = !this.checked;
                                };
                            </script>
                        </div> -->
                        <!-- price filter -->

                        <button class="btn btn-warning btn-sm mt-2 w-100">Aplicar filtros</button>

                        <!-- results table -->

                        <table class="table mt-2 table-hover" id="resultsTable">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Tipo</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i=0; i< productsSearch.length; i++) { %>

                                    <tr class="clickable-row">
                                        <th scope="row"><%= productsSearch[i].id %></th>
                                        <td><%= productsSearch[i].category %></td>
                                        <td><%= productsSearch[i].name %></td>
                                        <td>$ <%= productsSearch[i].price %></td>
                                        <td class="d-none"><form action="/products/delete/<%= productsSearch[i].id %>" method="GET"><button class="btn btn-warning btn-sm w-100">Eliminar</button></form></td>
                                        <td><form action="/products/edit/<%= productsSearch[i].id %>" method="GET"><button class="btn btn-warning btn-sm w-100">Editar</button></form></td>
                                        <td><form action="/products/delete/<%= productsSearch[i].id %>" method="GET"><button class="btn btn-warning btn-sm w-100">Eliminar</button></form></td>
                                    </tr>
    
                                    <% } %>

                            </tbody>
                        </table>
                        <!-- results table -->
                        

                    </form>
                </div>
                <!-- filters block -->

                <!-- Data Block -->
                <div class="dataBlock w-100 d-flex flex-wrap justify-content-between shadow rounded-lg p-2 mb-2 mt-4">
                    <form class="w-100 d-flex flex-wrap justify-content-end align-items-center" action="">
                        <h5 class="w-100 text-center">Información del producto</h5>

                        <div class="d-flex flex-wrap productName w-100 mt-2">
                            <input class="w-100 border border-white rounded-lg p-1" type="text"
                                placeholder="Nombre del producto">
                        </div>
                        <div class="d-flex flex-wrap w-100">
                            <select class="flex-grow-1 mt-2 p-0 border border-white rounded-lg mr-2" name="" id="">
                                <option value="typeOfProduct">Tipo de producto</option>
                                <option value="remera">Remera</option>
                                <option value="mochila">Mochila</option>
                                <option value="gorra">Gorra</option>
                                <option value="taza">Taza</option>
                            </select>
                            <input class="w-25 mt-2 border border-white rounded-lg p-1" type="text"
                                placeholder="Precio $$" size="10">
                        </div>
                        <!-- <div class="w-100 d-flex flex-wrap justify-content-between align-items-center">
                            <button class="btn btn-warning btn-sm mt-2">EDITAR</button>
                            <button class="btn btn-warning btn-sm mt-2">AGREGAR</button>
                        </div> -->

                    </form>
                </div>
                <!-- Data Block -->

                <!-- Collapse Tamaños -->
                <p class="w-100 shadow rounded-lg">
                    <button class="btn btn-warning btn-block" type="button" data-toggle="collapse"
                        data-target="#collapseSize" aria-expanded="false" aria-controls="collapseSize">Tamaños</button>
                </p>
                <div class="collapse w-100 mb-3" id="collapseSize">
                    <div class="card card-body w-100">
                        <div class="size w-100 mb-2 p-2">
                            <div>
                                <form action="">
                                    <div class="d-flex flex-wrap justify-content-between w-100">
                                        <div class="check p-1 m-0 mb-1 text-center"><label for="XS">XS
                                            </label><input class="check m-0" type="checkbox" name="sizes" id="XS"
                                                value="XS"></div>
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Ancho [cm] ">
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Altura [cm] ">
                                    </div>
                                    <div class="d-flex flex-wrap justify-content-between w-100">
                                        <div class="check p-1 m-0 mb-1 text-center"><label for="S">S
                                            </label><input class="check m-0" type="checkbox" name="sizes" id="S"
                                                value="S"></div>
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Ancho [cm]">
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Altura [cm]">
                                    </div>
                                    <div class="d-flex flex-wrap justify-content-between w-100">
                                        <div class="check p-1 m-0 mb-1 text-center"><label for="M">M
                                            </label><input class="check m-0" type="checkbox" name="sizes" id="M"
                                                value="M"></div>
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Ancho [cm]">
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Altura [cm]">
                                    </div>
                                    <div class="d-flex flex-wrap justify-content-between w-100">
                                        <div class="check p-1 m-0 mb-1 text-center"><label for="L">L
                                            </label><input class="check m-0" type="checkbox" name="sizes" id="L"
                                                value="L"></div>
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Ancho [cm]">
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Altura [cm]">
                                    </div>
                                    <div class="d-flex flex-wrap justify-content-between w-100">
                                        <div class="check p-1 text-center m-0 mb-1"><label for="XL">XL
                                            </label><input class="check m-0" type="checkbox" name="sizes" id="XL"
                                                value="XL"></div>
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Ancho [cm]">
                                        <input class="border border-light rounded-lg p-1 m-0 mb-1" type="text" name=""
                                            id="" placeholder="Altura [cm]">
                                    </div>
                                </form>
                            </div>

                            <button class="btn btn-warning btn-sm btn-block mt-1">AGREGAR OTRO TAMAÑO</button>
                        </div>
                    </div>
                </div>
                <!-- Collapse Tamaños -->

                <!-- Collapse Color -->
                <p class="w-100 shadow rounded-lg">
                    <button class="btn btn-warning btn-block" type="button" data-toggle="collapse"
                        data-target="#collapseColors" aria-expanded="false"
                        aria-controls="collapseColors">Colores</button>
                </p>
                <div class="collapse w-100 mb-3" id="collapseColors">
                    <div class="card card-body w-100">
                        <div class="colors w-100 p-2">
                            <form class="d-flex flex-wrap justify-content-around" action="">
                                <div class="d-flex justify-content-between">
                                    <label for="white">Blanco</label>
                                    <input type="checkbox" name="colors" id="white" value="white">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="black">Negro</label>
                                    <input type="checkbox" name="colors" id="black" value="black">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="blue">Azul</label>
                                    <input type="checkbox" name="colors" id="blue" value="blue">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="yellow">Amarillo</label>
                                    <input type="checkbox" name="colors" id="yellow" value="yellow">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="red">Rojo</label>
                                    <input type="checkbox" name="colors" id="red" value="red">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="gray">Gris</label>
                                    <input type="checkbox" name="colors" id="gray" value="gray">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="green">Verde</label>
                                    <input type="checkbox" name="colors" id="green" value="green">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="pink">Rosa</label>
                                    <input type="checkbox" name="colors" id="pink" value="pink">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="brown">Marrón</label>
                                    <input type="checkbox" name="colors" id="brown" value="brown">
                                </div>
                            </form>
                            <button class="btn btn-warning btn-sm btn-block">AGREGAR OTRO COLOR</button>
                        </div>
                    </div>
                </div>
                <!-- Collapse Color -->

                <!-- Collapse OtherParameters -->
                <p class="w-100 shadow rounded-lg">
                    <button class="btn btn-warning btn-block" type="button" data-toggle="collapse"
                        data-target="#collapseOtherParameters" aria-expanded="false"
                        aria-controls="collapseOtherParameters">Otros Parámetros</button>
                </p>
                <div class="collapse w-100 mb-3" id="collapseOtherParameters">
                    <div class="card card-body w-100">
                        <div class="anotherParameters w-100 mb-2">
                            <form class="d-flex flex-wrap justify-content-around" action="">
                                <div class="d-flex justify-content-between">
                                    <label for="cotton">Algodón</label>
                                    <input type="checkbox" name="extras" id="cotton" value="cotton">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="poliester">Poliester</label>
                                    <input type="checkbox" name="extras" id="poliester" value="poliester">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="roundNeck">Cuello redondo</label>
                                    <input type="checkbox" name="extras" id="roundNeck" value="roundNeck">
                                </div>
                                <div class="d-flex justify-content-between">
                                    <label for="vNeck">Cuello en V</label>
                                    <input type="checkbox" name="extras" id="vNeck" value="vNeck">
                                </div>
                            </form>
                            <button class="btn btn-warning btn-sm btn-block">AGREGAR OTRO PARAMETRO</button>
                        </div>
                    </div>
                </div>
                <!-- Collapse OtherParameters -->

                <!-- Collapse Description -->
                <p class="w-100 shadow rounded-lg">
                    <button class="btn btn-warning btn-block" type="button" data-toggle="collapse"
                        data-target="#collapseDescription" aria-expanded="false"
                        aria-controls="collapseDescription">Descripción</button>
                </p>
                <div class="collapse w-100 mb-3" id="collapseDescription">
                    <div class="card card-body w-100">
                        <form class="d-flex flex-wrap justify-content-center" action="">
                            <input class="border border-white rounded-lg p-5 m-0 w-100" type="text"
                                placeholder="Descripción">
                        </form>
                    </div>
                </div>
                <!-- Collapse Description -->

            </div>
            <div class="secondColumn col-12 col-md-4 d-flex flex-wrap align-items-center">
                <div class="image w-100 position-relative p-1">
                    <h5 class="text-center m-0">Portada</h5>
