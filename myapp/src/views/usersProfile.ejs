<html lang="es">
<%- include('partials/head') %>


<body>
   <%- include('partials/header') %>
   <div class="userProfile container">
      <div class="row">
         <div class="col-12 d-flex flex-wrap justify-content-center p-4">
            <h2 class="userName text-center p-0 m-0"><%= user.username %>!</h1>
         </div>
         <div class="firstColumn d-flex flex-wrap flex-column justify-content-start align-items-center col-12 col-md-6">

            <!-- AccountData Block -->
            <div class="accountDataBlock w-100 d-flex flex-wrap shadow rounded-lg p-2 mb-3 mt-0">
               <div class="w-100 d-flex flex-wrap justify-content-start align-items-between">
                  <h5 class="w-100 text-center">Datos de cuenta</h5>

                  <div class="d-flex flex-wrap align-items-center col-2 m-0 p-0">
                     <img class="w-100 shadow m-0 p-0 mb-1" src="/images/users/<%=user.avatar%>" alt="">
                     <!-- Button trigger modal -->
                     <div class="d-flex flex-wrap align-items-center w-100">
                        <button type="button" class="btn btn-warning btn-sm w-100" data-toggle="modal"
                           data-target="#avatarModal">
                           Editar
                        </button>
                     </div>
                  </div>
                  <div class="d-flex flex-wrap align-items-center col-10 m-0 p-0 pl-2">
                     <h6 class="w-100 text-start p-1 rounded-lg">Username:</h6>
                     <h6 class="bg w-100 text-start p-1 rounded-lg">
                        <%= user.username %> </h6>
                     <h6 class="w-100 text-start p-1 rounded-lg">Email:</h6>
                     <h6 class="bg w-100 text-start p-1 rounded-lg"><%= user.email %></h6>
                  </div>
               </div>
            </div>
            <!-- AccountData Block -->

            <!-- Collapse PersonalData -->
