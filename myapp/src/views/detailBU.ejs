            <i class="fas fa-angle-double-right"></i>
          </div>
          <div class="col-3 justify-content-center d-flex flex-wrap p-0 m-0">
            <a class="#" href="">
              <img class="productMain rounded-lg side w-100 p-2"
                src="/images/products/<%= productDetail.image[0] %>" alt="imgbibliouser">
            </a>
          </div>
          <div class="col-7 d-flex flex-wrap p-0 m-0 justify-content-start">
            <div class="col-12 d-flex flex-wrap m-0 p-0 align-items-center">
            <!-- muestro tama単os disponibles leidos del JSON  -->
            <h4 class="text-center pt-2 w-100 text-uppercase"><%= productDetail.name %>!</h4>
            <h5 class="w-100 m-auto text-center pb-2"><%= productDetail.description %></h5>

            <div class="col-12 d-flex flex-wrap m-0 p-0 align-items-center">
            
            <h5 class="w-25 p-0 m-0">Tama単os: </h5>
            <% for(let i=0; i < productDetail.sizes.length; i++) { %>
            <span class="pr-2 pl-0 pt-0 pb-0"><%= productDetail.sizes[i].tag %>: <%= productDetail.sizes[i].size %>
              <%= productDetail.sizes[i].unit %> - </span>
            <% } %>
          </div>

          <div class="col-12 d-flex flex-wrap m-0 p-0 align-items-center">
            
            <h5 class="w-25 p-0 m-0">Colores: </h5>
            <% for(let i=0; i < productDetail.colors.length; i++) { %>
            <span class="pr-2 pl-0 pt-0 pb-0"><i class="fas fa-tint p-1" style="color: <%= productDetail.colors[i].colorCode%>"></i><%= productDetail.colors[i].colorName %></span>
            <% } %>

          </div>

          </div>
            <div class="col-12 d-flex flex-wrap p-0 m-0 justify-content-end">
              <a href="/products/index"><button type="button"
                class="shadow m-0 btn btn-warning  btn-radius mr-3">Cambiar producto</button></a>
              </div>
          </div>
          
        </div>
        <!-- row de producto -->

        <!-- row de memes -->
