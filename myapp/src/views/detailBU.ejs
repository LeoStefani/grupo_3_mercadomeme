  <div class="row m-0 p-0">

    <!-- size selector -->
    <div
      class="productDetailDivContainers m-0 mt-2 p-2 col-6 d-flex flex-wrap size align-items-center">
      <form class="col-12 m-0 p-0 d-flex flex-wrap align-items-center" action="">
        <div class="col-3 m-0 p-0">
          <h5 class="p-0 m-0">Tama単os: </h5>
        </div>
        <div class="col-9 m-0 p-0 d-flex flex-wrap justify-content-around align-items-center">
          <!-- agrego selectores segun los tama単os disponibles de ese producto                                                          -->
          <% for(let i=0; i < productDetail.sizes.length; i++) { %>
          <div class="check">
            <label class="m-0 p-0 text-uppercase"
              for="<%= productDetail.sizes[i].tag %>"><%= productDetail.sizes[i].tag %></label>
            <input class="check ml-1" type="radio" name="sizes" id="<%= productDetail.sizes[i].tag %>"
              value="<%= productDetail.sizes[i].tag %>">
          </div>
          <% } %>

        </div>
      </form>
    </div>
    <!-- size selector -->

    <!-- color selector -->
    <div class="productDetailDivContainers m-0 mt-2 p-2 col-6 d-flex flex-wrap size align-items-center">
      <form class="col-12 d-flex flex-wrap align-items-center" action="">
        <div class="col-3 m-0 p-0">
          <h5 class="p-0 m-0">Colores: </h5>
        </div>
        <div class="col-9 m-0 p-0 d-flex flex-wrap justify-content-between align-items-center">
          <!-- agrego selectores segun los COLORES disponibles de ese producto                                                          -->
          <% for(let i=0; i < productDetail.colors.length; i++) { %>
          <div class="check">
            <label class="m-0 p-0 text-capitalize" for="<%= productDetail.colors[i].colorName %>"><i class="fas fa-tint"
                style="color: <%= productDetail.colors[i].colorCode%>"></i>
              <%= productDetail.colors[i].colorName %></label>


            <input class="check ml-1" type="radio" name="colors" id="<%= productDetail.colors[i].colorName %>"
              value="<%= productDetail.colors[i].colorName %>">
          </div>
          <% } %>

        </div>
      </form>
    </div>
    <!-- color selector -->
