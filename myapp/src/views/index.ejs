<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>
    <div class="index container">

        <!-- Selector entre memes y productos -->
        <div class="row mb-0 mt-4 justify-content-center">
            <div class="col-10 d-flex flex-wrap justify-content-center shadow m-0 p-3 prod-memes rounded-lg">
                <div class="optionProducts col-12 col-md-6 flex-wrap justify-content-center m-0 p-0">
                    <a class="" href="/products/index">
                        <div class="bgProducts imgContainer">

                            <img class="productsNormal rounded-lg" src="/images/products_stop_contipo.png"
                                onmouseover="this.src='/images/gif_productos-hover.gif'"
                                onmouseout="this.src='/images/products_stop_contipo.png'" alt="buscar-productos"
                                style="width:100%;">
                            <!-- <h1 class="ml13 products centered" >Buscar por productos</h1> -->

                        </div>
                    </a>
                </div>
                <div class="optionMemes col-12 col-md-6 flex-wrap justify-content-center m-0 p-0">
                    <a href="/memes">
                        <div class="bgMemes imgContainer">

                            <img class="w-100 memesNormal rounded-lg" src="/images/memes_stop_contipo.png"
                                onmouseover="this.src='/images/gif_memes-hover.gif'"
                                onmouseout="this.src='/images/memes_stop_contipo.png'" alt="buscar-meme"></div>
                        <!-- <h1 class="ml13 memes">Empezar buscando memes</h1> -->

                    </a>
                </div>
            </div>
        </div>
        <!-- Selector entre memes y productos -->

        <!--Carousel With indicators-->
        <div class="row mb-0 justify-content-center rounded-lg">
            <div id="carouselExampleIndicators" class="carousel slide col-10 m-0 shadow p-0 rounded-lg"
                data-ride="carousel ">
                <ol class="carousel-indicators rounded-lg">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active">
                    </li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner p-3">
                    <div class="carousel-item active rounded-lg">
                        <img src="/images/productosconmemes/GrupoGorras.png" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/productosconmemes/GrupoBolsas.png" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/productosconmemes/GrupoTazas.png" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <!--Carousel With indicators-->

        <!-- los mas vendidos (muestra los 4 productos mas vendidos) -->
        <div class="mostWanted row mb-4 d-flex flex-wrap  justify-content-center">
            <div class="col-10 shadow d-flex flex-wrap justify-content-center m-0 p-2 rounded-lg">
                <% for(let i = 0; i < sortedProducts.length; i++) { %>
                <div class="prearticle col-6 col-md-3 m-0 p-2">
                    <div class="article p-0 rounded-lg">
                        <a class="text-decoration-none" href="/products/detail/<%= sortedProducts[i].id %>">
                            <img src="/images/products/<%= sortedProducts[i].images[0].name %>" class="w-100" alt="">
                            <h5 class="text-dark m-0 text-center"><%= sortedProducts[i].name %></h5>
                            <p class="text-dark m-0 text-center">$ <%= sortedProducts[i].price %></p>
                        </a>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        <!-- los mas vendidos  -->
    </div>

    <!-- <footer> -->
    <%- include('partials/footer') %>
    <!-- <footer> -->

    <!-- </scripts bootstrap> -->
    <%- include('partials/scriptsBootstrap') %>
    <!-- </scripts bootstrap> -->
    <!-- </scripts propios> -->
    <script src="/js/index.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
    <!-- </scripts propios> -->


</body>

</html>