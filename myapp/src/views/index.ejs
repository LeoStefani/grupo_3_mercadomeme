<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>

<body>
        <%- include('partials/header') %>
        <div class="index container">

                <!-- Selector entre memes y productos -->
                <div class="row mb-4 justify-content-center">
                        <div class="col-10 d-flex flex-wrap justify-content-center">
                                <div class="optionProducts col-12 col-md-6 flex-wrap justify-content-center">
                                        <a class="" href="/products/index">
                                                <div class="bgProducts"><img class="w-100 productsNormal"
                                                                src="images/ProductsHomeNormal.png"
                                                                onmouseover="this.src='images/ProductsHomeHover.png'"
                                                                onmouseout="this.src='images/ProductsHomeNormal.png'"
                                                                alt="imagen"></div>
                                        </a>
                                </div>
                                <div class="optionMemes col-12 col-md-6 flex-wrap justify-content-center">
                                        <a href="/memes">
                                                <div class="bgMemes"><img class="w-100 memesNormal"
                                                                src="images/MemesHomeNormal.png"
                                                                onmouseover="this.src='images/MemesHomeHover.png'"
                                                                onmouseout="this.src='images/MemesHomeNormal.png'"
                                                                alt="imagen"></div>
                                        </a>
                                </div>
                        </div>
                </div>
                <!-- Selector entre memes y productos -->

                <!--Carousel With indicators-->
                <div class="row mb-5 justify-content-center">
                        <div id="carouselExampleIndicators" class="carousel slide col-10 " data-ride="carousel ">
                                <ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active">
                                        </li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                        <div class="carousel-item active">
                                                <img src="images/carrousel_img.png" class="d-block w-100" alt="...">
                                        </div>
                                        <div class="carousel-item">
                                                <img src="images/carrousel_img.png" class="d-block w-100" alt="...">
                                        </div>
                                        <div class="carousel-item">
                                                <img src="images/carrousel_img.png" class="d-block w-100" alt="...">
                                        </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                                        data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                                        data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                </a>
                        </div>
                </div>
                <!--Carousel With indicators-->

                <!--Titulo de Los Mas Vendidos-->
                <div class="row mb-1 justify-content-center">
                        <div class="col-10">
                                <h3 class="text-center">Los mas vendidos</h3>
                        </div>
                </div>
                <!--Titulo de Los Mas Vendidos-->

                <!-- los mas vendidos (muestra los 4 productos mas vendidos) -->
                <div class="losMasVendidos row mb-4 d-flex flex-wrap justify-content-center">
                        <div class="col-10 d-flex flex-wrap justify-content-center">
                                <% for(let i = sortedProducts.length-1; i > sortedProducts.length-5; i--) { %>
                                <div class="col-6 col-md-3 p-0">
                                        <div class="article p-2 rounded-lg">
                                                <a class="text-decoration-none"
                                                        href="/products/detail/<%= sortedProducts[i].id %>">
                                                        <img src="../images/iconoImagenBordesIguales.png" class="w-100"
                                                                alt="">
                                                        <h5 class="text-dark m-0"><%= sortedProducts[i].name %></h5>
                                                        <p class="text-dark m-0">$ <%= sortedProducts[i].price %></p>
                                                </a>
                                        </div>
                                </div>
                                <% } %>
                        </div>
                </div>
                <!-- los mas vendidos  -->

        </div>

        <!-- <footer> -->
        <%- include('partials/footer') %>
        <!-- <footer> -->
        <!-- </scripts bootstrap> -->
        <%- include('partials/scriptsBootstrap') %>
        <!-- </scripts bootstrap> -->

</body>

</html>